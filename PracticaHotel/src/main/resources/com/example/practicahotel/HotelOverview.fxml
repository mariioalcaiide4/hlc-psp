                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>
                                        <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                           <children>
                                               <Button onAction="#handleNewClient" text="New.." />
                                               <Button onAction="#handleEditClient" text="Edit.." />
                                               <Button onAction="#handleDeleteClient" text="Delete" />
                                           </children>
                                        </HBox>
                                    </children>
                                </AnchorPane>

                                <!-- Reservas del cliente -->
                                <AnchorPane>
                                    <children>
                                        <Label text="Reservas del Cliente" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                                        <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                           <children>
                                               <Button text="New..." />
                                               <Button text="Edit..." />
                                               <Button text="Delete" />
                                           </children>
                                        </HBox>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
